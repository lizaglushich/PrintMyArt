<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/css/style.css">

  <title>All Products</title>
  <style>
    body {
      font-family: Georgia;
      margin: 0;
      padding: 15px;
      background: #f9f9f9;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
    }

    .grid {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
    }

    .product-card {
      flex: 0 0 calc(20% - 20px); /* 5 cards per row */
      background-color: #fff;
      border-radius: 10px;
      padding: 15px;
      text-align: center;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      transition: transform 0.3s ease;
    }
    .product-card h3 {
      font-size: 22px; /* Bigger title */
    }

    .product-card p {
      font-size: 18px; /* Artist and Price lines */
    }

    .product-card a {
      font-size: 18px; /* Order Details link */
      font-weight: bold;
    }


    .product-card:hover {
      transform: scale(1.02);
    }

   /* .product-card img {
      width: 100%;
      height: 250px;
      object-fit: cover;
      border-radius: 8px;
    }
*/
    .product-card h3 {
      margin: 10px 0 5px;
    }

    .product-card p {
      margin: 5px 0;
    }

    .product-card a {
      display: inline-block;
      margin-top: 10px;
      color: rgba(40, 23, 40, 0.83);
      text-decoration: none;
      font-weight: bold;
    }

    @media (max-width: 1024px) {
      .product-card {
        flex: 0 0 calc(33.333% - 20px); /* 3 per row on tablets */
      }
    }

    @media (max-width: 768px) {
      .product-card {
        flex: 0 0 calc(50% - 20px); /* 2 per row on small tablets */
      }
    }

    @media (max-width: 480px) {
      .product-card {
        flex: 0 0 100%; /* 1 per row on phones */
      }
    }
  </style>
</head>
<body>
  <div class="header">
  <h1>PrintMyArt</h1>
  <div class="nav">
    <a href="/home">Home</a>
    <a href="/all"><strong>Products</strong></a>
    <a href="/generate">Generate</a>
    <a href="/contact">ContactsðŸ‘¤</a>
  </div>
</div>

  <h1>All Products</h1>
  <div class="grid">
    <% products.forEach(product => { %>
      <div class="product-card">
        <h3><%= product.ArtName %></h3>
        <p>Artist: <%= product.Artist %></p>
        <img src="/img/<%= product.Image %>" class="art-preview" alt="<%= product.ArtName %>">
        <p>Price To Print: â‚¬<%= product.PriceToPrint %></p>
        <p><a href="/shop?id=<%= product.ID %>">Order Details</a></p>
      </div>
    <% }); %>
  </div>
</body>
</html>
